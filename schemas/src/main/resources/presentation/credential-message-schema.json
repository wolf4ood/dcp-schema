{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "CredentialMessageSchema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/CredentialMessage"
    }
  ],
  "$id": "https://w3id.org/dspace-dcp/v0.8/presentation/credential-message-schema.json",
  "definitions": {
    "CredentialMessage": {
      "type": "object",
      "properties": {
        "@context": {
          "$ref": "https://w3id.org/dspace-dcp/v0.8/common/context-schema.json"
        },
        "@type": {
          "type": "string",
          "const": "CredentialMessage"
        },
        "credentials": {
          "type": "array",
          "items": {
            "$ref": "https://w3id.org/dspace-dcp/v0.8/presentation/credential-message-schema.json#/definitions/CredentialContainer"
          }
        },
        "requestId": {
          "type": "string"
        }
      },
      "required": [
        "@context",
        "@type",
        "requestId"
      ]
    },
    "CredentialContainer": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "CredentialContainer"
        },
        "payload": {
          "type": [
            "string",
            "object"
          ]
        }
      },
      "required": [
        "@type",
        "payload"
      ]
    }
  }
}